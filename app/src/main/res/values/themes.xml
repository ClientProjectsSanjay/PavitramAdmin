<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UN" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brown</item>
        <item name="colorOnPrimary">@color/brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="ThemeInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="minHeight">54dp</item>
        <item name="maxHeight">54dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeErrorColor">@color/orange</item>
    </style>

    <style name="ThemeInputTextLayout_1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/orange</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
    </style>

    <style name="ThemeEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/light</item>
        <item name="font_name">light</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">noExcludeDescendants</item>
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="hintTextColor">@color/text_color</item>
    </style>

    <style name="EditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="android:maxHeight">@dimen/input_height</item>
    </style>

    <style name="pin_view" parent="android:TextAppearance.DeviceDefault.Widget.EditText">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/input_border_color</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">noExcludeDescendants</item>
    </style>

    <style name="ThemeButtonFill" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/bold</item>
        <item name="font_name">medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_orange_corner_round_8</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeButtonFlat" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/bold</item>
        <item name="font_name">medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/outline_orange_corner_round_8</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#f0f7f4</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>