<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="order"
            type="com.artisan.un.apiModel.Order" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_pin_view"
        android:padding="12dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:text="@{@string/order_id_s(order.display_order_id ?? ``)}"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/total_amount_d(order.order_amount)}"
            android:textColor="@color/new_text_color"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@{order.getOrderDate()}"
            android:textColor="@color/new_text_color"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/order_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/order_status_"
            android:textColor="@color/darkGray"
            android:textSize="14sp"
            app:fontFamily="@font/bold"
            app:layout_constraintBottom_toBottomOf="@id/action_buttons_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/action_buttons_container" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:includeFontPadding="false"
            android:text="@{order.getOrderStatus()}"
            android:textColor="@color/orange"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/order_status_txt"
            app:layout_constraintEnd_toStartOf="@id/action_buttons_container"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/order_status_txt"
            app:layout_constraintTop_toTopOf="@id/order_status_txt" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/action_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/outline_radius_green_4dp"
                android:gravity="center"
                android:text="@string/shipped"
                android:textAllCaps="false"
                android:textColor="@color/teal_200"
                app:fontFamily="@font/medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_brown_corner_round_8"
                android:gravity="center"
                android:text="@string/view"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>