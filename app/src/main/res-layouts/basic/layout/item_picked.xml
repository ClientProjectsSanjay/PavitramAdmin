<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="order"
            type="com.artisan.un.apiModel.Order" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_pin_view"
        android:padding="12dp">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:text="@{@string/order_id_s(order.display_order_id ?? ``)}"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Order ID : #PORD001001" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@{@string/total_amount_d(order.order_amount)}"
            android:textColor="@color/new_text_color"
            android:textSize="14sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/order_date"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_id"
            tools:text="Total Amount : â‚¹1000" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="order_date"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="12dp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{order.getOrderDate()}"
            android:textColor="@color/new_text_color"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/total_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="00"
            app:layout_constraintStart_toEndOf="@id/barrier"
            tools:text="2022-08-29 | 12:00:00" />

        <TextView
            android:id="@+id/applied_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@{@string/applied_weight_s(order.applied_weight)}"
            android:textColor="@color/new_text_color"
            android:textSize="14sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/barrier"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total_amount"
            tools:text="Applied Weight : 5.0" />

        <TextView
            android:id="@+id/order_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="@string/order_status_"
            android:textColor="@color/darkGray"
            android:textSize="14sp"
            app:fontFamily="@font/bold"
            app:layout_constraintEnd_toStartOf="@id/order_status"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintTop_toBottomOf="@id/order_date" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@{order.getOrderStatus()}"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/order_status_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/order_status_txt"
            tools:text="Picked" />

        <TextView
            android:id="@+id/awb_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/awb_code_s(order.awb_code)}"
            android:textColor="@color/new_text_color"
            android:textSize="14sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/applied_weight"
            tools:text="AWB Code : 8114074" />

        <TextView
            android:id="@+id/shipment_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/shipment_no_s(order.shipment_id)}"
            android:textColor="@color/new_text_color"
            android:textSize="14sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/view_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/awb_code"
            tools:text="Shipment No. : 248559519" />

        <TextView
            android:id="@+id/courier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@{@string/courier_name_s(order.courier_name)}"
            android:textColor="@color/new_text_color"
            android:textSize="14sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/view_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shipment_no"
            tools:text="Courier Name : UPS Courier Services" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_btn"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_brown_corner_round_8"
            android:gravity="center"
            android:text="@string/view"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/courier_name"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>