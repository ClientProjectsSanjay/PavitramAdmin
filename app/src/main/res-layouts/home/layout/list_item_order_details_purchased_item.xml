<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.artisan.un.apiModel.OrderDetailsProductItem"/>

        <variable
            name="isColored"
            type="boolean" />

        <variable
            name="data"
            type="OrderDetailsProductItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{isColored? @color/green_shade: @android:color/transparent, default=@color/green_shade}"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="5"
            android:includeFontPadding="false"
            android:text="@{data.productName}"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@{String.valueOf(data.productPrice)}"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@{String.valueOf(data.productQty)}"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@{String.valueOf(Float.valueOf(data.productQty)*data.productPrice)}"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

</layout>